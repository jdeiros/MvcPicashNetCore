@model MvcPicashNetCore.Models.Loan

@{
    ViewData["Title"] = "Crear";
}


            <legend>Crear Pr√©stamo</legend>

<hr />

<div class="row">
    
    <div class="col-md-4">
        
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="TotalAmmount" class="control-label"></label>
                <input asp-for="TotalAmmount" class="form-control" />
                <span asp-validation-for="TotalAmmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterestPercentage" class="control-label"></label>
                <input asp-for="InterestPercentage" class="form-control" />
                <span asp-validation-for="InterestPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstalmentsAmount" class="control-label"></label>
                <input asp-for="InstalmentsAmount" class="form-control" />
                <span asp-validation-for="InstalmentsAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            
            
            <div class="form-group">
                <label asp-for="LoanStatus" class="control-label"></label>
                @Html.DropDownList(
                    "LoanStatus", @Html.GetEnumSelectList<LoanStatus>(),
                        "Seleccione estado",
                        new {@class = "form-control"}
                )

            </div>
            
            <div class="form-group">
                
                <input type="submit" value="Crear Prestamo" class="btn btn-primary" />
                <input type="submit" value="Crear Calendario" class="btn btn-outline-warning" />
                
            </div>

        </form>
        
    </div>

    <div class="col-md-8">
        <div class="panel panel-primary">

            @{
                foreach(var cutoa in (List<MvcPicashNetCore.Models.Installment>) @ViewBag.MensajeCuotas)
                {
                    <div>
                        <span> 
                            Nro.: @cutoa.InstallmentNumber 
                            Status: @cutoa.InstallmentStatus
                            Monto: @cutoa.Amount
                            Vencimiento: @cutoa.Duedate.ToString("dd/MM/yyyy");
                        </span>
                    </div>
                }
            }
        
        </div>
    </div>

</div>

<div>
    <a asp-action="Index">Volver al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
