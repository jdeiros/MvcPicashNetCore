        </tbody>
    </table>
</div>

@{
    @using (Html.BeginForm(
        "Close", "Installments", 
        new { loanTypeId = ViewData["LoanTypeIdSelected"], dueDate= @ViewData["dateFieldToday"], routeId=@ViewData["RouteIdSelected"] }, 
