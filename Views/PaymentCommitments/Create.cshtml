                        new {@class = "form-control"}
                )

            </div>
            
            <div class="form-group">
                
                <!-- <input type="submit" value="Crear Prestamo" class="btn btn-primary" /> -->
                <input type="submit" value="Crear Calendario" class="btn btn-outline-warning" />

