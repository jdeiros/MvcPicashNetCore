<div class="row">
    
    <div class="col-md-4">
        
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="TotalAmmount" class="control-label"></label>
                <input asp-for="TotalAmmount" class="form-control" />
                <span asp-validation-for="TotalAmmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterestPercentage" class="control-label"></label>
                <input asp-for="InterestPercentage" class="form-control" />
                <span asp-validation-for="InterestPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstalmentsAmount" class="control-label"></label>
                <input asp-for="InstalmentsAmount" class="form-control" />
                <span asp-validation-for="InstalmentsAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            
            
            <div class="form-group">
                <label asp-for="PaymentcommitmentStatus" class="control-label"></label>
                @Html.DropDownList(
                    "PaymentCommitmentStatus", @Html.GetEnumSelectList<PaymentcommitmentStatus>(),
