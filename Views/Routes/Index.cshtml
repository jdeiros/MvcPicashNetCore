@model IEnumerable<MvcPicashNetCore.Models.Route>

@{
    ViewData["Title"] = "Index";
}

<h1>Rutas</h1>

<p>
    <a asp-action="Create">Crear Nueva Ruta</a>
</p>
<table class="table table-sm table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DebtCollector.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DebtCollector.SurName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DebtCollector.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DebtCollector.SurName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RouteId"><img src="~/images/edit.svg" alt="Crediflash" class="img-responsive img-sm" style="width:16px;height:16px;" /></a> |
                <a asp-action="Details" asp-route-id="@item.RouteId"><img src="~/images/details.svg" alt="Crediflash" class="img-responsive img-sm" style="width:16px;height:16px;" /></a> |
                <a asp-action="Delete" asp-route-id="@item.RouteId"><img src="~/images/delete.svg" alt="Crediflash" class="img-responsive img-sm" style="width:16px;height:16px;" /></a> |
                <a asp-action="RedirectToInstallments" asp-route-id="@item.RouteId"><img src="~/images/payment-green.svg" alt="Crediflash" class="img-responsive img-sm" style="width:16px;height:16px;" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
